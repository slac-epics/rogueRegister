# Select XpmMini Internally generated LCLS-II Clock
record( seq, "$(PGP):SeqXpmMiniTiming" )
{
	field( DESC, "Select XpmMini Internal LCLS-II Clock" )

	# Disable MiniTpg and set ModeSelEn to UseClkSel
	field( DLY1, "0" ) field( DOL1, "0" ) field( LNK1, "$(PGP):Timing:UseMiniTpg    PP NMS" )
	field( DLY2, "0" ) field( DOL2, "0" ) field( LNK2, "$(PGP):Timing:ModeSelEn     PP NMS" )

	# Assert RxPllReset for 1 sec 
	field( DLY3, "0" ) field( DOL3, "1" ) field( LNK3, "$(PGP):Timing:RxPllReset    PP NMS" )
	field( DLY4, "1" ) field( DOL4, "0" ) field( LNK4, "$(PGP):Timing:RxPllReset    PP NMS" )

	# Select LCLS-II Clock
	field( DLY5, "1" ) field( DOL5, "1" ) field( LNK5, "$(PGP):Timing:ClkSel        PP NMS" )

	# Assert C_RxReset for 1 sec 
	field( DLY6, "0" ) field( DOL6, "1" ) field( LNK6, "$(PGP):Timing:C_RxReset     PP NMS" )
	field( DLY7, "1" ) field( DOL7, "0" ) field( LNK7, "$(PGP):Timing:C_RxReset     PP NMS" )

	# Reset the latching register
	field( DLY8, ".1") field( DOL8, "0" ) field( LNK8, "$(PGP):Timing:RxDown        PP NMS" )

	# Enable MiniTpg
	field( DLY9, "1" ) field( DOL9, "1" ) field( LNK9, "$(PGP):Timing:UseMiniTpg    PP NMS" )
	field( DLYA, "0" ) field( DOLA, "1" ) field( LNKA, "$(PGP):XpmMini:HwEnable     PP NMS" )
	field( DLYB, "0" ) field( DOLB, "0" ) field( LNKB, "$(PGP):XpmMini:Link         PP NMS" )

	# Configure rate and enable
	# 4: 100Hz, 5: 10Hz, 6: 1Hz
	field( DLYC, "0" ) field( DOLC, "6" ) field( LNKC, "$(PGP):XpmMini:Config_L0Select_RateSel PP NMS" )
	field( DLYD, "0" ) field( DOLD, "1" ) field( LNKD, "$(PGP):XpmMini:Config_L0Select_Enabled PP NMS" )

#	field( DLYE, "0" ) field( DOLE, "1" ) field( LNKE, "$(PGP):Trigger:MasterEnable PP NMS" )
#	field( DLYF, "0" ) field( DOLF, "0" ) field( LNKF, "$(PGP):?    PP NMS" )

	info( autosaveFields, "DESC" )
	#	info( autosaveFields, "DESC DOL1 DLY1 DOL2 DLY2 DOL3 DLY3 DOL4 DLY4 DOL5 DLY5 DOL6 DLY6 DOL7 DLY7 DOL8 DLY8 DOL9 DLY9 DOLA DLYA" )
}

