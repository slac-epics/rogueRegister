record( calcout, "$(CAM):Acquire:StartRun" )
{
	field( INPA, "$(CAM):Acquire CPP NMS" )
	field( INPB, "$(PGP):Ch$(CH):Trigger:MasterEnable CPP NMS" )
	field( CALC, "A && !B" )
#	Use "When Non-zero" so hitting Acquire will always force a new SeqStartRun.
#	Needed for example, if pgpRogue IOC is rebooted while $CAM:Acquire is set.
	field( OOPT, "When Non-zero" )
	field( OUT,  "$(PGP):Ch$(CH):SeqStartRun.PROC NPP NMS" )
}

record( calcout, "$(CAM):Acquire:StopRun" )
{
	field( INPA, "$(CAM):Acquire CPP NMS" )
	field( CALC, "!A" )
	field( OOPT, "When Non-zero" )
	field( OUT,  "$(PGP):Ch$(CH):SeqStopRun.PROC NPP NMS" )
}
